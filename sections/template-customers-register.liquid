<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Create your account</h1>
        </div>
        <div class="mt-8">
            {% form 'create_customer' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">
                            Error!
                        </strong>
                        <p class="block sm:inline">
                            {{ form.errors | default_errors }}
                        </p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <label class="sr-only" for="first_name">First Name</label>
                    <input
                        class="relative block w-full px-3 py-2 border" 
                        name="customer[first_name]" 
                        type="text" 
                        id="first_name" 
                        placeholder="Your First Name"
                        autocomplete="given-name"
                    >
                </div>
                <div class="my-2">
                    <label class="sr-only" for="last_name">Last Name</label>
                    <input 
                        class="relative block w-full px-3 py-2 border" 
                        name="customer[last_name]" 
                        type="text" 
                        autocomplete="family-name"
                        id="last_name" 
                        placeholder="Your Last Name"
                    >
                </div>
                <div class="my-2">
                    <label class="sr-only" for="birthday">Birthday</label>
                    <input 
                        class="relative block w-full px-3 py-2 border" 
                        name="customer[note][birthday]" 
                        type="date" 
                        id="birthday"
                    >
                </div>
                <div class="my-2">
                    <label class="sr-only" for="email">Email</label>
                    <input 
                        class="relative block w-full px-3 py-2 border" 
                        name="customer[email]" 
                        type="email" 
                        id="email" 
                        placeholder="Email"
                    >
                </div>
                <div class="my-2">
                    <label class="sr-only" for="password">Password</label>
                    <input 
                        class="relative block w-full px-3 py-2 border" 
                        name="customer[password]" 
                        type="password" 
                        id="password" 
                        placeholder="password"
                        autocomplete="new-password"
                    >
                </div>
               
                <div>
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bf-gray-900">
                        Create account
                    </button>
                </div>
            {% endform %}
            <div class="my-2 text-sm text-center">
                <a href="{{ routes.account_url }}" class="underline text-gray-500 hover:text-gray-900">
                    Already have an account?
                </a>
            </div>
        </div>
    </div>
</div>